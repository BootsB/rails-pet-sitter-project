<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path('Pet-sitter-banner.jpg') %>);">
  <div class="container">
    <h1>Find your next furry friend to take care of</h1>
    <p class="mb-3">Connect with pet owners in your area who need trusted pet sitters</p>
    <%= link_to "Search now", pets_path, class: 'btn btn-info btn-lrg mt-3' %>
  </div>
</div>

<div class="container">
  <h3 class="mt-3">Meet some recent additions</h3>

  <div class="row mt-3">
    <% if @pets %>
      <% @pets.each do |pet| %>
        <div class="col-4 mb-4">
          <%= link_to pet_path(pet.id), class:"flat-card-link" do %>
            <div class="card pet-card">
              <img class="card-img-top" src="<%= cl_image_path pet.photo.key %>" style="object-fit: cover; width: 100%; height: 300px;">
              <div class="card-body bg-light d-flex flex-column">
                <div>
                  <div class="card-title">
                    <h3><strong><%= pet.name.capitalize %></strong></h3>
                  </div>
                  <p><%= pet.description.capitalize %></p>
                </div>
                <div class="mt-auto d-flex justify-content-between">
                  <div>
                    <i class="fa-solid fa-house"></i>
                    <span><%= pet.city %></span>
                  </div>
                  <div>
                    <i class="fa-solid fa-sterling-sign"></i>
                    <% if pet.price % 1 != 0 %>
                      <span><%= sprintf('%.2f', pet.price) %> / day</span>
                    <% else %>
                      <span><%= pet.price.round %> / day</span>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
