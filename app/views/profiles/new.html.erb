<div class="row">
  <div class="col-6 m-auto mt-3">
    <div class="bg-light p-3">
      <h1>Create your profile</h1>
      <div class="mt-3">
        <%= simple_form_for @profile || current_user.build_profile, url: profiles_path, method: :post do |form| %>
          <%= form.input :photo %>
          <%= form.input :first_name %>
          <%= form.input :last_name %>
          <%= form.input :description %>
          <%= form.input :phone_number %>
          <%= form.input :age %>
          <%= form.label :role, "Choose your role:" %>
          <%= form.select :role, Profile.roles.keys.map { |role| [role.humanize, role] }, { include_blank: false } %>
          <br>
          <br>
          <%= form.button :submit, class: "btn btn-primary"%>
        <% end %>
      </div>
    </div>
  </div>
</div>
<br>
