<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-body">
          <h1 class="card-title text-center">Your Profile</h1>
          <div class="text-center mb-4">
            <% if @profile.photo.attached? %>
              <%= cl_image_tag @profile.photo.key, class: "rounded-circle", width: 250, height: 250, crop: :thumb, alt: "Profile Picture" %>
            <% else %>
              <%= image_tag "https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png", class: "rounded-circle", width: 150, height: 150, alt: "Default Profile Picture" %>
            <% end %>
          </div>
          <dl class="row">
            <dt class="col-sm-3">First Name:</dt>
            <dd class="col-sm-9"><%= @profile.first_name %></dd>
            <dt class="col-sm-3">Last Name:</dt>
            <dd class="col-sm-9"><%= @profile.last_name %></dd>
            <dt class="col-sm-3">Bio:</dt>
            <dd class="col-sm-9"><%= @profile.description %></dd>
            <dt class="col-sm-3">Age:</dt>
            <dd class="col-sm-9"><%= @profile.age %></dd>
          </dl>
          <% if @profile.user == current_user %>
            <div class="text-center">
              <%= link_to 'Edit', edit_profile_path(@profile), class: 'btn btn-info' %>
            </div>
          <% else %>
            <div class="text-center">
              <%= link_to 'Back', "/dashboard", class: 'btn btn-info' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
