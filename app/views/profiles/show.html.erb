<div class="row">
  <div class="col-6 m-auto mt-3">
    <div class="bg-light p-3">
      <h1>Your profile</h1>
      <div class="mt-3 profile">
        <dl>

          <dt>Avatar:</dt>
          <br>
          <dd><% if @profile.photo.attached? %>
              <%= cl_image_tag @profile.photo.key, class: "photo-profile-img", width: 300, height: 350, crop: :thumb %>
            <% else %> <!-- Display a default profile picture if the user doesn't have one -->
              <%= image_tag "https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png", class: "avatar", alt: "default picture" %>
            <% end %>
          </dd>
          <br>
          <div class="profile-info">
            <dt>First Name:</dt>
            <dd><%= @profile.first_name %></dd>

            <br>

            <dt>Last Name:</dt>
            <dd><%= @profile.last_name %></dd>

            <br>

            <dt>Bio:</dt>
            <dd><%= @profile.description %></dd>

            <br>

            <dt>Age:</dt>
            <dd><%= @profile.age %></dd>

            <br>

            <dt>Role:</dt>
            <dd><%= @profile.role.humanize %></dd>
          </div>
        <%= link_to 'Back', root_path, class: 'btn btn-secondary' %>
        <%= link_to 'Edit', edit_profile_path(@profile), class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
<br>
