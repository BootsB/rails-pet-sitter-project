<%= simple_form_for(pet) do |f| %>
  <%= f.input :name, label: "Pet's name" %>
  <%= f.input :age, label: "Pet's age"%>
  <%= f.input :category, label:"Pet's species", collection: Pet.categories.keys %>
  <%= f.input :address, label: "Pet's address"%>
  <%= f.input :postcode, label: "Postcode" %>
  <%= f.input :description, label: "How can we help you?" %>
  <%= f.input :price, label: "How much is your daily offer?"%>
  <%= f.input :start_date, label: "Start date",
              as: :string,
              input_html: { data: { controller: "datepicker" } } %>
  <%= f.input :end_date, label: "End date",
              as: :string,
              input_html: { data: { controller: "datepicker" } } %>
  <%= f.input :photo, as: :file %>
  <%= f.submit "Submit", class: "btn btn-info" %>
<% end %>
