<%= simple_form_for(pet) do |f| %>
  <%= f.input :name, label: "Pet's name" %>
  <%= f.input :age, label: "Pet's age"%>
  <%= f.input :category, label:"Pet's species", collection: Pet.categories.keys %>
  <%= f.input :address, label: "Pet's address"%>
  <%= f.input :postcode, label: "Postcode" %>
  <%= f.input :description, label: "How can we help you?" %>
  <%= f.input :price, label: "How much is your daily offer?" %>
  <%= f.label :booking_date, "Booking Date" %>
  <%= f.date_field :start_date, min: Time.now.strftime('%Y-%m-%d'), max: "2030-12-31", class: "form-control" %><%= f.date_field :end_date, min: Time.now.strftime('%Y-%m-%d'), max: "2024-12-31", class: "form-control" %>
  <%= f.input :photo, as: :file %>
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
