<div class="container" data-controller="filter-pets">
  <h3 class="mt-4 mb-4 text-center">Find your perfect match üê∂‚ô•Ô∏è</h3>
    <%= simple_form_for(@pet, data: { filter_pets_target: "form", action:"submit->filter-pets#send" }) do |f| %>
      <div class="mt-3 filter-form search-bar">
          <div class="col city">
          <%= f.input :city,
                label: "",
                input_html: { data: { filter_pets_target: "city" } },
                required: false%>
          </div>
          <div class="col category">
            <%= f.input :category,
                  label:"",
                  collection: Pet.categories.keys,
                  input_html: { data: { filter_pets_target: "category" } },
                  required: false %>
          </div>
          <div class="col start-date">
            <%= f.input :start_date, label: "",
                  as: :string,
                  input_html: { data: { controller: "datepicker", filter_pets_target: "startDate" } },
                  required: false %>
          </div>
          <div class="col end-date">
            <%= f.input :end_date, label: "",
                  as: :string,
                  input_html: { data: { controller: "datepicker", filter_pets_target: "endDate" } },
                  required: false%>
          </div>
          <div class="col search">
            <%= button_tag(type: 'submit', class: "btn btn-info mt-3 search-button") do %>
              <i class="fa-solid fa-magnifying-glass"></i>
            <% end %>
          </div>
        </div>
      <% end %>

  <p class="mt-3" data-filter-pets-target="petAmount"></p>

  <div class="row" data-filter-pets-target="items">
  </div>
</div>
