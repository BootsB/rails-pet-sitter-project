<div class="container" data-controller="filter-pets">
    <h1 class="mt-3 mb-4">Find your perfect match üê∂‚ô•Ô∏è</h1>
    <div class="filter-form">
      <%= simple_form_for(@pet, data: { filter_pets_target: "form", action:"submit->filter-pets#send" }) do |f| %>
        <div class="row align-items-center">
          <div class="col">
            <%= f.input :category, label:"Pet's species", collection: Pet.categories.keys, input_html: { data: { filter_pets_target: "category" } } %>
          </div>
          <div class="col">
            <%= f.input :start_date, label: "Start date",
                  as: :string,
                  input_html: { data: { controller: "datepicker", filter_pets_target: "startDate" } } %>
          </div>
          <div class="col">
            <%= f.input :end_date, label: "End date",
                  as: :string,
                  input_html: { data: { controller: "datepicker", filter_pets_target: "endDate" } } %>
          </div>
          <div class="col">
            <%= f.submit "Search", class: "btn btn-primary mb-2" %>
          </div>
        </div>
      <% end %>
    </div>

    <p class="mt-3" data-filter-pets-target="petAmount"></p>

    <div class="row" data-filter-pets-target="items">
    </div>
</div>
